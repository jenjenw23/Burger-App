<div class="container">
<div class="container">
<div class="jumbotron">
  <h1 class="text-center">Burger Time!</h1>
  <h3 class="text-center"></h3>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="row">
        <div class="col text-center">
          <h2>Burgers that have not been devoured!</h2>
          <ul>
            {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
          </ul>
        </div>
        <div class="col text-center">
          <h2>Burgers that were devoured!</h2>
          <ul>
            {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col text-center"> 
        <!-- Add Train  -->
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><strong>Add a burger</strong></h3>
          </div>
          <div class="panel-body"> 
            
            <!-- Entry Form -->
            
            <form class="create-form">
              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
              </div>
              <div class="form-group">
                <label for="devoured">Devoured?</label>
                <br>
                <input type="radio" name="devoured" value="1" checked>
                Devoured! <br>
                <input type="radio" name="devoured" value="0">
                Not Yet! </div>
              <button type="submit">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>