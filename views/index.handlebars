<div class="container">
<div class="row">
  <div class="col text-center"> <img src="assets/images/neon-burger.jpg" width="650" height="334" alt="Burger Time logo"/> </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="row">
        <div class="col text-center">
          <h2>Ready to Eat!</h2>
          <ul>
            {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
          </ul>
        </div>
        <div class="col text-center">
          <h2>That was Yummy!</h2>
          <ul>
            {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col text-center"> 
        <!-- Add Train  -->
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><strong>Add a burger</strong></h3>
          </div>
          <div class="panel-body"> 
            
            <!-- Entry Form -->
            
            <form class="create-form">
              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
              </div>
              <div class="form-group">
                <label for="devoured">What kind of burger do you want to eat?</label>
                <br>
                {{!-- added hidden field to still set state of devoured --}}
                <input type="hidden" value="0" name="devoured"/>

                {{!-- <input type="radio" name="devoured" value="1" checked>
                Devoured! <br>
                <input type="radio" name="devoured" value="0">
                Not Yet! </div> --}}
              <button type="submit">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>